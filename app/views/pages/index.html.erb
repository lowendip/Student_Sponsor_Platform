<div id="carouselCaptions" class="carousel slide" style="height:17em">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
  </div>
  <div class="carousel-inner" style="height:17em">
    <div class="carousel-item active" style="height:17em">
      <svg aria-hidden="true" class="bd-placeholder-img " height="100%" preserveAspectRatio="xMidYMid slice" width="100%" xmlns="http://www.w3.org/2000/svg"><rect width="100%" height="100%" fill="var(--bs-secondary-color)"></rect></svg>
      <div class="carousel-caption d-none d-md-block" style="height:17em; padding-top:3em">
        <h1>Student Sponsor Platform</h1>
        <p>A platform for UMBC students in search of capstone projects and sponsors in search of software solutions</p>
      </div>
    </div>
    <div class="carousel-item" style="height:17em">
      <svg aria-hidden="true" class="bd-placeholder-img " height="100%" preserveAspectRatio="xMidYMid slice" width="100%" xmlns="http://www.w3.org/2000/svg"><rect width="100%" height="100%" fill="var(--bs-secondary-color)"></rect></svg>
      <div class="carousel-caption d-none d-md-block" style="height:17em; padding-top:3em">
        <h1>Sign up</h1>
        <p>Sign up as a student or sponsor to start adding projects</p>
        <%= link_to "Sign Up As Sponsor", sign_up_path(user: "sponsor"), method: :get, class: "btn btn-primary" %>
        <%= link_to "Sign Up As Student", sign_up_path(user: "student"), method: :get, class: "btn btn-primary" %>
      </div>
    </div>
    <div class="carousel-item" style="height:17em">
      <svg aria-hidden="true" class="bd-placeholder-img " height="100%" preserveAspectRatio="xMidYMid slice" width="100%" xmlns="http://www.w3.org/2000/svg"><rect width="100%" height="100%" fill="var(--bs-secondary-color)"></rect></svg>
      <div class="carousel-caption d-none d-md-block" style="height:17em; padding-top:3em">
        <h1>Discovering Projects</h1>
        <p>Find the right sponsor or student project for you</p>
        <%= link_to "Sponsor Projects", sponsor_projects_path, method: :get, class: "btn btn-primary" %>
        <%= link_to "Student Projects", student_projects_path, method: :get, class: "btn btn-primary" %>
      </div>
    </div>
    <div class="carousel-item" style="height:17em">
      <svg aria-hidden="true" class="bd-placeholder-img " height="100%" preserveAspectRatio="xMidYMid slice" width="100%" xmlns="http://www.w3.org/2000/svg"><rect width="100%" height="100%" fill="var(--bs-secondary-color)"></rect></svg>
      <div class="carousel-caption d-none d-md-block" style="height:17em; padding-top:3em">
        <h1>Contact Directly</h1>
        <p>Contact other sponsors or students directly</p>
        <%= link_to "Sponsors", sponsors_path, method: :get, class: "btn btn-primary" %>
        <%= link_to "Students", students_path, method: :get, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
