<%= search_form_for(@q, url: student_dashboard_path) do |form| %>
  <%= form.label :name_cont %>
  <%= form.text_field :name_cont %>
  <%= form.submit "Search Projects", class: "btn btn-primary" %>
<% end %>
<div style="display: flex">
<%= button_to "New Project", student_dashboard_new_path, class:"btn btn-primary", method: :get%>
<%= button_to "Edit Profile", student_dashboard_edit_profile_path, class:"btn btn-primary", method: :get%>
</div>
<div class="fl-table">
<table class="fl-table">
  <thead>  
  <tr>
    <th>Project Name</th>
    <th>Project Description</th>
    <th>Status</th>
    <th>Expiration Date</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @projects.each do |project| %>
    <tr>
      <td><%= link_to project.name, student_dashboard_show_path(project) %></td>
      <td><%= project.short_desc %></td>
      <td><%= project.status %></td>
      <td><%= project.expiration %></td>
      <td>
        <div class="btn-group">
          <%= button_to "Edit", student_dashboard_edit_path(project.id), class: "btn btn-primary", method: :get%>
          <% if project.status == "Visible" %>
            <%= button_to "Hide", student_dashboard_hide_path(project.id), class: "btn btn-primary", method: :post%>
          <% elsif project.status == "Hidden" %>
            <%= button_to "Unhide", student_dashboard_unhide_path(project.id), class: "btn btn-primary", method: :post%>
          <% end %>
          <%= button_to "Renew", student_dashboard_renew_path(project.id), class: "btn btn-primary", method: :post%>
          <%= button_to "Delete", student_dashboard_delete_path(project.id), class: "btn btn-danger", method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this project?" }}%> </div>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
